    <script>
        // Waitlist functionality
        function submitWaitlist() {
            const name = document.getElementById('name').value;
            const email = document.getElementById('email').value;
            const language = document.getElementById('language').value;
            
            if (name && email && language) {
                document.getElementById('waitlist-content').style.display = 'none';
                document.getElementById('thank-you').style.display = 'block';
            } else {
                alert('Please fill all fields');
            }
        }

        function showDashboard() {
            document.getElementById('waitlist').style.display = 'none';
            document.getElementById('dashboard').style.display = 'block';
            
            // Generate QR code
            const qr = new QRious({
                element: document.getElementById('qr-code'),
                value: window.location.href,
                size: 200
            });
        }

        function showWaitlist() {
            document.getElementById('dashboard').style.display = 'none';
            document.getElementById('waitlist').style.display = 'block';
        }

        // Payment Flow
        let recognition;
        try {
            recognition = new (window.SpeechRecognition || window.webkitSpeechRecognition)();
            recognition.lang = 'en-US';
            recognition.interimResults = false;
            recognition.maxAlternatives = 1;
        } catch (e) {
            console.log('Speech Recognition not supported');
        }

        function startListening() {
            const micBtn = document.getElementById('mic-btn');
            
            if (recognition) {
                recognition.start();
                micBtn.classList.add('listening');
                
                recognition.onresult = function(event) {
                    const transcript = event.results[0][0].transcript;
                    document.getElementById('transcript').textContent = transcript;
                    processVoiceCommand(transcript);
                    micBtn.classList.remove('listening');
                };
                
                recognition.onerror = function(event) {
                    console.error('Speech recognition error', event.error);
                    micBtn.classList.remove('listening');
                };
            } else {
                // Simulate voice input for unsupported browsers
                const simulatedCommands = [
                    "Send ₹500 to Raghav Gupta",
                    "Transfer ₹1000 to Priya Sharma",
                    "Pay ₹250 to Rajesh Kumar"
                ];
                const randomCommand = simulatedCommands[Math.floor(Math.random() * simulatedCommands.length)];
                document.getElementById('transcript').textContent = randomCommand;
                processVoiceCommand(randomCommand);
            }
        }

        function processVoiceCommand(command) {
            // Simple parsing - in reality, this would be more sophisticated
            const amountMatch = command.match(/(?:₹|rs|rupees)\s*(\d+)/i);
            const nameMatch = command.match(/to\s+(.+)%%%LATEX_BLOCK_0%%%{window.paymentData.amount} to %%%LATEX_BLOCK_1%%%{moduleName}-module`).style.display = 'block';
        }

        function hideModule(moduleName) {
            document.getElementById(`%%%LATEX_BLOCK_2%%%{amount}`;
                btn.onclick = function() {
                    document.querySelectorAll('.amount-btn').forEach(b => b.classList.remove('selected'));
                    this.classList.add('selected');
                    window.selectedAmount = amount;
                };
                optionsContainer.appendChild(btn);
            });
            
            document.getElementById('savings-amounts').style.display = 'block';
        }

        function simulateSaving() {
            if (window.selectedAmount) {
                alert(`Started saving ₹%%%LATEX_BLOCK_3%%%{document.getElementById('goal-name').textContent}!`);
                hideModule('savings');
            } else {
                alert('Please select an amount');
            }
        }

        // Loans Module
        function selectLoanAmount(amount) {
            document.querySelectorAll('.amount-btn').forEach(btn => btn.classList.remove('selected'));
            event.target.classList.add('selected');
            window.selectedLoanAmount = amount;
        }

        function simulateLoanApproval() {
            if (window.selectedLoanAmount) {
                alert(`Loan of ₹%%%LATEX_BLOCK_4%%%{type} insurance purchased successfully! Your policy details will be sent to your registered email.`);
            hideModule('insurance');
        }

        // Smooth scrolling for navigation
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
    </script>
